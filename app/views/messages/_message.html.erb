<% if messages.present? %>
  <% messages.each do |m| %>
    <% if m.user.id == current_user.id %>
      <strong><%= m.content %></strong>
      by <%= m.user.name %>さん
      <hr>
    <% else %> 
      <div class="text-right">
        <strong><%= m.content %></strong>
        by <%= m.user.name %>さん
      </div>
      <hr>
    <% end %>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>